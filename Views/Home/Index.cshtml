@{
    ViewData["Title"] = "Home Page";
}

<style>
    .home-dark-bg {
        background: url('/images/background.jpg') no-repeat center center fixed;
        background-size: cover;
        min-height: 100vh; /* make it fill full screen */
    }

    /* Optional: dark overlay effect for readability */
    .home-dark-bg::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 0;
    }

    .home-content {
        position: relative;
        z-index: 1; /* keeps text above the overlay */
        background: rgba(255, 255, 255, 0.1); /* subtle background */
        backdrop-filter: blur(5px); /* nice glassy effect */
    }
</style>

<div class="home-dark-bg d-flex align-items-center justify-content-center">
    <div class="home-content text-center p-5 rounded-4 shadow-lg text-white">
        <h1 class="display-3 fw-bold mb-4">Welcome to MetricSystem</h1>
        <p class="lead mb-4">Easily convert Fahrenheit to Celsius</p>
        <hr class="my-4">
        <p class="mb-4">Get started conversion by click below:</p>
        <a class="btn btn-primary btn-lg px-5 py-3" asp-controller="Conversion" asp-action="Fahrenheit" role="button">Start Conversion</a>
    </div>
</div>
