
@model MetricSystem.Models.TemperatureModel
@{
    ViewData["Title"] = "Fahrenheit Conversion";
}
<div class="container py-5">
    <h2 class="text-center mb-4">Fahrenheit to Celsius</h2>
    <form asp-action="Fahrenheit" asp-controller="Conversion" method="post" class="mx-auto" style="max-width:400px;">
        <div class="mb-3">
            <label for="Fahrenheit" class="form-label">Fahrenheit Value</label>
            <input asp-for="Fahrenheit" class="form-control" />
            <span asp-validation-for="Fahrenheit" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="Result" class="form-label">Celsius Value</label>
            <input asp-for="Result" class="form-control" readonly value="@(Model != null ? Math.Round(Model.Result, 2).ToString() : "")" />
        </div>
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">Convert</button>
            <button type="button" class="btn btn-secondary" onclick="window.location.href='/Conversion/Fahrenheit'">Clear</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}